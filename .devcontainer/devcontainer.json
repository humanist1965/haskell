{
    "name": "Haskell Jupyter",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
      "ghcr.io/haskell/devcontainer-feature/haskell:1": {
        "version": "latest",
        "stack": "none",
        "cabal": "3.10"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "haskell.haskell"
        ]
      }
    },
    "postCreateCommand": "bash .devcontainer/setup-ihaskell.sh",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
  }
  