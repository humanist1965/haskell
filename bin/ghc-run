#!/bin/bash

# Check if a file argument is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <haskell_file.hs>"
    exit 1
fi

# Get the filename without the .hs extension
filename=$(basename "$1" .hs)

# Get the directory where the script is located
script_dir="$(cd "$(dirname "$0")" && pwd)"
root="${script_dir}/.."

# Create build directory if it doesn't exist
mkdir -p "${root}/build"

# Compile the Haskell file
ghc "$1" -outputdir "${root}/build" -o "${root}/build/${filename}" -isrc

# Check if compilation was successful
if [ $? -eq 0 ]; then
    echo "Compilation successful! ${root}"
    # Run the executable
    "${root}/build/${filename}"
else
    echo "Compilation failed!"
    exit 1
fi